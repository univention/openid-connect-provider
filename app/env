ARGS=--identifier-client-path ./identifier-univention
LDAP_URI=ldap://@%@ldap/server/name@%@:7389
LDAP_BINDDN=@%@appcenter/apps/openid-connect-provider/hostdn@%@
LDAP_BINDPW_FILE=/var/run/secrets/konnectd.machine.secret
LDAP_BASEDN=@%@ldap/base@%@
LDAP_SCOPE=sub
LDAP_LOGIN_ATTRIBUTE=uid
LDAP_EMAIL_ATTRIBUTE=mailPrimaryAddress
LDAP_NAME_ATTRIBUTE=cn
LDAP_UUID_ATTRIBUTE=uidNumber
LDAP_UUID_ATTRIBUTE_TYPE=text
LDAP_FILTER=(objectClass=organizationalPerson)
KONNECT_BACKEND=ldap
ecparam=/etc/kopano/konnectd-encryption-secret.key
eckey=/etc/kopano/konnectd-signing-private-key.pem
